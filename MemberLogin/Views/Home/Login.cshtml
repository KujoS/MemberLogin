@model MemberLogin.Models.ViewModel.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    
    @Html.TextBoxFor(m => m.Name, new { autofocus = "", @class = "form-control", placeholder = "使用者名稱" })
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "密碼" })
    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

    <div>
        <input type="submit" value="登入" class="btn btn-info" id="btn_send" />
    </div>
}

